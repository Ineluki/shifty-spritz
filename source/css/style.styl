#shifty-spritz
  width 100%
  background rgba(0, 0, 0, 1)
  border-top 10px solid transparent
  border-bottom 10px solid transparent
  box-sizing border-box
  top 0
  left 0
  text-align left
  display block
  color #fff
  z-index 2147483647
  position fixed
  user-select none
  font-family "Droid sans"

  &:hover #controls
    display block

  &.hide
    display none

  i
    line-height 30px
    cursor pointer
    font-size 14px
    padding 0 5px

    &.left
      float left

    &.right
      float right

  #controls
    display block
    width 100%
    box-sizing border-box
    height 30px
    margin 0 0 -10px 0
    
    #pause-play
      padding-left 10px

    #close
      padding-right 10px

    #pause-play
      margin 0

    #progress-bar
      background rgba(255, 255, 255, 0.2)
      margin 10px 5px 0 0
      border-radius 5px
      height 10px
      width calc(100% - 85px)
      cursor pointer
      float right
 
      #progress
        height 100%
        min-width 10px
        position relative
        background rgba(255, 255, 255, 0.5)
        width 0
        border-radius inherit

        &:after
          content ""
          display block
          border-radius inherit
          height 10px
          width 10px
          background #000
          position absolute
          right 0
          top 0

  #words
    background #fff
    border-bottom none
    height 50px
    cursor move
    font-weight 500
    font-size 25px
    line-height 50px
    width 100%
    color #333
    position relative

    &:before, &:after
      content ""
      display block
      border 5px solid transparent
      position absolute
      left calc(30% + 3px)

    &:after
      border-top-color #000
      top 0

    &:before
      border-bottom-color #000
      top 100%
      margin -10px 0 0 0px
    
    #left, #right, #center
      height 100%
      min-height 1px
      float left
      display inline-block

    #center
      color #fa3d3d

    #left
      width 30%
      text-align right