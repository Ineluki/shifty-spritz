body, html
  margin 0
  padding 0
  height 100%

#spritzify
  width 600px
  background rgba(0, 0, 0, 0.8)
  border 10px solid transparent
  border-bottom none
  top 0
  left 0
  color #fff
  border-radius 5px
  z-index 2147483647
  position fixed
  user-select none
  font-family "Droid sans"

  i
    line-height 30px
    cursor pointer
    font-size 14px
    margin 0 0 0 8px

    &.left
      float left

    &.right
      float right

  #top
    i
      margin 0 0 0 8px

  #controls, #top
    width 100%
    height 30px

    #pause-play
      margin 0

    #progress-bar
      background rgba(255, 255, 255, 0.2)
      margin 10px 0 0 0
      border-radius 5px
      height 10px
      width 538px
      cursor pointer
      float right
 
      #progress
        height 100%
        transition width 0.15s linear
        background rgba(255, 255, 255, 1)
        width 0
        border-radius inherit

  #words
    background #fff
    border-radius 3px
    border-bottom none
    padding 10px 0
    cursor move
    font-size 4em
    width 100%
    color #333
    
    #left, #right, #center
      height 100%
      min-height 20px
      float left
      display inline-block

    #center
      color #fa3d3d

      &:before
        content ""
        display none
        border 5px solid transparent
        border-bottom-color #ddd
        position absolute
        left 40%
        top 100%
        margin -10px 0 0 0px

    #left
      width 30%
      text-align right